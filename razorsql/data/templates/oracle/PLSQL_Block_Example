DECLARE
	employee_salary EMPLOYEE.SALARY%TYPE;
CURSOR ECursor IS 
	SELECT SALARY FROM EMPLOYEE where DNO = 4 FOR UPDATE;
BEGIN
	OPEN ECursor;
	LOOP
	FETCH ECursor into employee_salary;
	EXIT WHEN ECursor%NOTFOUND;
	UPDATE EMPLOYEE SET SALARY = (employee_salary*1.05) WHERE CURRENT OF ECursor;
	END LOOP;
	CLOSE ECursor;
	COMMIT;
END;
