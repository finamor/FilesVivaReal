function isAlpha (text)
{
	var lowerChars = "abcdefghijklmnopqrstuvwxyz";
	var upperChars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
	var validValues = lowerChars + upperChars;
	
	for (var i = 0; i < text.length; i++)
	{
		var c = text.charAt(i);
		if (validValues.indexOf(c) < 0)
		{
			return false;
		}
	}
	return true;
}